set -e

find /var/vcap/packages/autoconf-2.69/bin -type f -exec ln -s {} /usr/local/bin/ \;
rm -r /usr/local/share # I KNOW, DIRTY HACK
ln -s /var/vcap/packages/autoconf-2.69/share /usr/local/

export PERL5LIB=/var/vcap/packages/p4ts-0.0.0.1

# libjson-c
# avoids the dreaded message during compilation
# ./gen: error while loading shared libraries: libjson-c.so.2: cannot open shared object file: No such file or directory
pushd json-c-0.12
  #sh autogen.sh
  ./configure CFLAGS=-Wno-error --prefix=$BOSH_INSTALL_TARGET
  make
  make install
popd

echo $BOSH_INSTALL_TARGET
