# abort script on any command that exits with a non zero value
set -e

PATH=$PATH:$BOSH_INSTALL_TARGET/bin


pushd p4ts-0.0.0.1
  cp -r * $BOSH_INSTALL_TARGET/
  rm p4ts-0.0.0.1.tar.bz2
  ##
  # how to use:
  export PERL5LIB=$BOSH_INSTALL_TARGET
  cd $BOSH_INSTALL_TARGET
  ln -s . Autom4te
popd


echo $BOSH_INSTALL_TARGET
